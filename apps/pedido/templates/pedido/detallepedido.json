{% load l10n %}
{
	"success": true,
	"message": "OK",
	totalCount: {{total}},
	"data":	[{% for detallepedido in  detallepedidos %}
			{
				"id": {{detallepedido.id}},
				"pedidoid": {{detallepedido.pedido.id }},
				"producto__descripcion": '{{detallepedido.producto.descripcion}}',
				"productoid": {{detallepedido.producto.id}},
				"cantidad": {{detallepedido.cantidad}},
				"producto__precio": {{detallepedido.producto.precio|unlocalize }},
				"subtotal": {{ detallepedido.cantidad }}*{{ detallepedido.producto.precio|unlocalize }},
			},{% endfor %}
		]
}